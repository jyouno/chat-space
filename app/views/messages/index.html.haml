.wrapper
  = render 'group'

  .right-content
    .right-content__top
      .right-content__top__left-box
        %p.right-content__top__left-box__group
          = @groupname.name
        %p.right-content__top__left-box__member Member : test
      .right-content__top__right-box
        = link_to 'groups/2/edit' do
          .right-content__top__right-box__btn Edit
    .right-content__main
      = render "coment"
    .right-content__bottom
      %form.right-content__bottom__textarea
        .right-content__bottom__textarea__left-box
          %input{type: 'text', placeholder: 'type a message',class: 'right-content__bottom__textarea__left-box--textarea'}
          %label{for: "upload-icon", class: 'right-content__bottom__textarea__left-box--icon'}
            %i.fa.fa-image
              %input{type: 'file', id: 'upload-icon'}
        %input{type: 'submit', value: 'Send', class: 'right-content__bottom__textarea__send-btn'}
           