.wrapper
  .left-content
    .left-content__top
      .left-content__top__box
        %p.left-content__top__box__user-name test-name
        %ul.left-content__top__box__link-box
          %li.left-content__top__box__link-box__new-group
            %a{href: ''}
              %i.fa.fa-edit.icon__white
          %li.left-content__top__box__link-box__edit-user
            %a{href: ''}
              %i.fa.fa-cog.icon__white
    .left-content__bottom
      /↓他ファイルにする
      .left-content__bottom__group
        = render "group"

  .right-content
    .right-content__top
      .right-content__top__left-box
        %p.right-content__top__left-box__group test-group
        %p.right-content__top__left-box__member Member : test
      .right-content__top__right-box
        %a{href: ''}
          .right-content__top__right-box__btn Edit
    .right-content__main
      = render "coment"
    .right-content__bottom
      %form.right-content__bottom__textarea
        .right-content__bottom__textarea__left-box
          %input{type: 'text', placeholder: 'type a message',class: 'right-content__bottom__textarea__left-box--textarea'}
          %label{for: '', class: 'right-content__bottom__textarea__left-box--icon'}
            %i.fa.fa-image
        %input{type: 'submit', value: 'Send', class: 'right-content__bottom__textarea__send-btn'}
           